@page "{id}"
@model BookStore.Web.Pages.Books.BorrowModel
@{
    ViewData["Title"] = "Borrow";
}

<h2>Borrow the book</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="Borrowers" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.BorrowerId, Model.Borrowers)
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-10 offset-2" >
            <a class="btn btn-dark" asp-page="/Books/Borrow" asp-route-id="@Model.Id">Borrow book</a>
        </div>
    </div>
    

</form>

