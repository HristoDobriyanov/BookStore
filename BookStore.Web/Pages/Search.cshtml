@page
@model BookStore.Web.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}

<h1>Showing search results for "@Model.SearchTerm"</h1>

<ul>
    @foreach (var result in Model.SearchResults)
    {
        string url = Url.Page($"/{result.Type}s/Details", new { id = @result.Id });

        <li>  <a href="@url">@Html.Raw(result.SearchResult)</a> </li>
    }

</ul>
